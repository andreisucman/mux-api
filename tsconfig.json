{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "target": "ES2022",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@functions/*": ["functions/*"],
      "@routes/*": ["routes/*"],
      "@helpers/*": ["helpers/*"],
      "@middleware/*": ["middleware/*"],
      "@types/*": ["types/*"],
      "@data/*": ["data/*"],
      "@webhooks/*": ["webhooks/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "./node_modules", "**/*.test.js", "dist"]
}
